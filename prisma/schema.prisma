// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Models

model Dealer{
  id          Int @id @default(autoincrement())
  name        String
  dir         String
  post        Post[]
  vehicle     Vehicles[] 
  leads       Leads[] 
  accs        Accessory[]
}

model Leads{
  id          Int @id @default(autoincrement())
  email       String @unique
  name        String
  lastName    String
  phone       Int 
  filing      String
  dealer      Dealer @relation(fields: [dealerId],references: [id])
  dealerId    Int
  terms       Boolean 
}

model Post{
  id          Int @id @default(autoincrement())
  name        String
  dealer      Dealer  @relation(fields: [dealerId],references: [id])
  dealerId    Int
  date        DateTime @default(now())
  description String
  vehicle     VehiclesOnPosts[]
}


model Vehicles{
  id           Int @id @default(autoincrement())
  dealer       Dealer @relation(fields: [dealerId],references: [id])
  dealerId     Int
  brand        String
  var          Variants[]
  year         Int
  name         String
  post         VehiclesOnPosts[]
  accs         Accessory[]
  transmission Transmission   
  doors        Int
  fuelType     FuelType   
  bodyType     Body
  identifier   String @unique
}

model Accessory{
  id          Int @id @default(autoincrement())
  vehicle     Vehicles @relation(fields: [vehicleId],references: [id])
  vehicleId   Int
  dealer      Dealer @relation(fields:[dealerId],references: [id])
  dealerId    Int
  name        String
}

model Variants{
  id          Int @id @default(autoincrement())
  name        String
  price       Int
  reserved    Int
  vehicle     Vehicles @relation(fields: [vehicleId],references: [id])    
  vehicleId   Int
  photo       String[]
}

model VehiclesOnPosts{
  vehicle     Vehicles @relation(fields: [vehicleId],references: [id])
  vehicleId   Int
  post        Post @relation(fields: [postId],references: [id])
  postId      Int
  @@id([postId,vehicleId])
}

//Enums

enum Transmission{
  Manual
  Automatic
}

enum FuelType{
  Nafta
  Diesel
  Electrico
  Hibrido
}

enum Body{
  Furgon
  Hatckback
  Compact
  Sedan
  SUV
  Pickup
}